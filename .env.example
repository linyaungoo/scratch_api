# SportsXZone credentials (DO NOT commit your real .env)
SXZ_BASE_URL=https://sportsxzone.com
SXZ_USERCODE=
SXZ_PASSWORD=

# API server
PORT=3000

# API metadata (HTAY-compatible response fields)
API_META_AUTHOR=GGWP API
API_META_WEBSITE=https://ggwp-api.render.com
API_META_COUNTRY=Thailand
API_META_COPYRIGHT=Legal action will be taken if any unauthorized use of our API is found.

# Scraper behavior
POLL_INTERVAL_MS=10000
CAPTURE_WINDOW_MS=5000
HEADLESS=true

# Filters (tune after running `npm run discover`)
ODDS_URL_REGEX=(body|handicap|odds|market|fixture|match|event|line)
ODDS_OPERATION_REGEX=
